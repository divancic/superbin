class SuperBin {
  ZAPIS: string; char = bit; gornji bit = predznak
  SuperBin() -> zero
  SuperBin(std::string number, unsigned int base, Sign sign)

  output_bin()
  output_oct()
  output_dec()
  output_hex()
  output_unsigned_bin(unsigned int bits)
  output_unsigned_oct(unsigned int bits)
  output_unsigned_dec(unsigned int bits)
  output_unsigned_hex(unsigned int bits)

  is_zero()
  to_int() // vrijed i kao i dolje; koja je razlika u odnosu na output_dec()
  to_bin() // vidjet kakav je to output?

  //aritmeticki
  neg(x)    // 2's complement
  add(x,y)
  sub(x,y)
  mul(x,y)
  div(x,y)
  mod(x,y)

  //comparison
  eq(x,y)
  ne(x,y)
  lt(x,y)
  le(x,y)
  gt(x,y)
  ge(x,y)

  //logical - c-like
  lnot(x)  // true is 0, false otherwise
  land(x,y)
  lor(x,y)
  lxor(x,y)

  //bit operations
  bnot(x)
  band(x,y)
  bor(x,y)
  bxor(x,y)

  //shift
  shl(x,bits)
  shr(x,bits)
  sal(x,bits)
  sar(x,bits)

  //single bit
  setb(n_lsb,n_msb)
  clrb(n_lsb,n_msb)
  notb(n_lsb,n_msb)
  getb(n_lsb,n_msb)

